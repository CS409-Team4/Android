<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingRight="36dp"
    android:paddingLeft="30dp">

    <TextView
        android:id="@+id/about_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IUI x Android"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/about_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="  This project analyzes the UI performance and available functions of Android, React Native, and NativeScript through comparison of quantitative UI testing measures."
        android:textSize="16dp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/about_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="CS496, SOC of KAIST"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/about_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Hyunsung Cho"
        android:textSize="14dp"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:id="@+id/about_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Subin Jeong"
        android:textSize="14dp"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:id="@+id/about_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Youngsoo Jang"
        android:textSize="14dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/about_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Spring 2017"
        android:textSize="16dp" />

</LinearLayout>